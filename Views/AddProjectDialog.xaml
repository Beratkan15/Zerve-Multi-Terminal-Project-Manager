<ui:FluentWindow x:Class="Zerve.Views.AddProjectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="Add Project" 
        Height="550" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        WindowCornerPreference="Round">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0" Title="Add Project" ShowMaximize="False"/>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Project Name -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Project Name" 
                          FontSize="14" 
                          FontWeight="SemiBold"
                          Margin="0,0,0,8"/>
                <ui:TextBox x:Name="ProjectNameTextBox" 
                           PlaceholderText="Enter project name"
                           FontSize="14"/>
            </StackPanel>

            <!-- Project ID -->
            <StackPanel Grid.Row="1" Margin="0,0,0,20">
                <TextBlock Text="Project ID" 
                          FontSize="14" 
                          FontWeight="SemiBold"
                          Margin="0,0,0,8"/>
                <ui:TextBox x:Name="ProjectIdTextBox" 
                           PlaceholderText="Leave empty for auto-generated ID (5-20 random chars)"
                           FontSize="14"/>
            </StackPanel>

            <!-- Folder Path -->
            <StackPanel Grid.Row="2" Margin="0,0,0,20">
                <TextBlock Text="Folder Path" 
                          FontSize="14" 
                          FontWeight="SemiBold"
                          Margin="0,0,0,8"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <ui:TextBox x:Name="FolderPathTextBox" 
                               Grid.Column="0"
                               PlaceholderText="Select project folder"
                               FontSize="14"
                               Margin="0,0,12,0"/>
                    <ui:Button Grid.Column="1"
                              Content="Browse" 
                              Icon="{ui:SymbolIcon Folder24}"
                              Appearance="Secondary"
                              Click="BrowseFolder_Click"
                              Padding="16,10"/>
                </Grid>
            </StackPanel>

            <!-- Command -->
            <StackPanel Grid.Row="3" Margin="0,0,0,20">
                <TextBlock Text="Command" 
                          FontSize="14" 
                          FontWeight="SemiBold"
                          Margin="0,0,0,8"/>
                <ui:TextBox x:Name="CommandTextBox" 
                           PlaceholderText="e.g., npm run dev"
                           FontSize="14"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="5" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Right">
                <ui:Button Content="Cancel" 
                          Appearance="Secondary"
                          Click="Cancel_Click"
                          Padding="20,10"
                          MinWidth="100"
                          Margin="0,0,12,0"/>
                <ui:Button Content="Add Project" 
                          Appearance="Primary"
                          Click="AddProject_Click"
                          Padding="20,10"
                          MinWidth="120"/>
            </StackPanel>
        </Grid>
    </Grid>
</ui:FluentWindow>
