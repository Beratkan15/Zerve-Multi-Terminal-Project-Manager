<ui:FluentWindow x:Class="Zerve.Views.AddFolderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="Add Folder" 
        Height="300" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        WindowCornerPreference="Round">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <ui:TitleBar Grid.Row="0" Title="Add Folder" ShowMaximize="False"/>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Folder Name -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Folder Name" 
                          FontSize="14" 
                          FontWeight="SemiBold"
                          Margin="0,0,0,8"/>
                <ui:TextBox x:Name="FolderNameTextBox" 
                           PlaceholderText="Enter folder name"
                           FontSize="14"/>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Right">
                <ui:Button Content="Cancel" 
                          Appearance="Secondary"
                          Padding="20,10"
                          Margin="0,0,12,0"
                          Click="Cancel_Click"/>
                <ui:Button Content="Add" 
                          Appearance="Primary"
                          Padding="20,10"
                          Click="Add_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</ui:FluentWindow>
