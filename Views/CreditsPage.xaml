<Page x:Class="Zerve.Views.CreditsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="{ui:ThemeResource ApplicationBackgroundBrush}"
                Padding="40">
            <StackPanel VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       MaxWidth="600">
                
                <!-- Logo/Title -->
                <TextBlock Text="ZERVE" 
                          FontSize="72"
                          FontWeight="Bold"
                          HorizontalAlignment="Center"
                          Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"
                          Margin="0,0,0,16"/>
                
                <TextBlock Text="Multi-Terminal Project Manager" 
                          FontSize="20"
                          HorizontalAlignment="Center"
                          Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                          Margin="0,0,0,12"/>
                
                <TextBlock Text="Version 1.1" 
                          FontSize="16"
                          HorizontalAlignment="Center"
                          Foreground="{ui:ThemeResource TextFillColorTertiaryBrush}"
                          Margin="0,0,0,48"/>

                <!-- Creator Info -->
                <ui:Card Padding="32" Margin="0,0,0,24">
                    <StackPanel>
                        <TextBlock Text="Created by" 
                                  FontSize="14"
                                  Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                                  HorizontalAlignment="Center"
                                  Margin="0,0,0,12"/>
                        
                        <TextBlock Text="Beratkan15" 
                                  FontSize="32"
                                  FontWeight="SemiBold"
                                  HorizontalAlignment="Center"
                                  Foreground="{ui:ThemeResource TextFillColorPrimaryBrush}"
                                  Margin="0,0,0,24"/>

                        <!-- GitHub Button -->
                        <ui:Button Content="View on GitHub" 
                                  Icon="{ui:SymbolIcon Globe24}"
                                  Appearance="Primary"
                                  HorizontalAlignment="Center"
                                  Click="GitHubLink_Click"
                                  Padding="24,12"
                                  FontSize="16"/>
                    </StackPanel>
                </ui:Card>
            </StackPanel>
        </Border>
    </Grid>
</Page>
